<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="SpeakableTextPresentCheck"
    android:background="#710713"
    >

    <ImageView
        android:id="@+id/imageViewBandaSuperior"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/banda"
        tools:ignore="ContentDescription"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/imageViewBlade"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_above="@id/textViewTitulo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/blades"
        tools:ignore="ContentDescription,ImageContrastCheck"
        />

    <TextView
        android:id="@+id/textViewTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/textViewTitulo"
        android:fontFamily="@font/god_of_war"
        android:textSize="28sp"
        android:gravity="center"
        android:layout_margin="10dp"
        android:textColor="#fbf2b1"
        />

    <Button
        android:id="@+id/buttonStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTitulo"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="@string/buttonStart"
        android:fontFamily="@font/god_of_war"
        android:textSize="20sp"
        android:padding="15dp"
        android:textStyle="bold"
        android:onClick="onClickButtonStart"
        />

</RelativeLayout>